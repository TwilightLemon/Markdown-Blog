<style>
    html,body{
        height: 100%;
        overflow: auto;
    }
    body{
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("<%=global.bingImgData.url%>") no-repeat;
        margin: 0;
        background-size:cover;
        background-attachment:fixed;
    }
    .container {
        flex: 1;
    }

    .navbar-text{
        margin-left: 50px;
        font-size: 20px;
    }
    .navbar {
        height:60px ;
        -webkit-backdrop-filter: blur(50px);
        backdrop-filter: blur(50px);
        background-color: rgba(21, 22, 23,0.8) !important;
    }

    .card{
        background-color: rgba(0,0,0,0.4);
        border-radius: 10px;
        -webkit-backdrop-filter: blur(50px);
        backdrop-filter: blur(50px);
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }
    .card-text{
        color: rgba(240,240,240,0.8);
    }
    .card-title{
        color: rgb(253,253,253);
    }
    .card-subtitle{
        color: rgba(250,250,250,0.8);
    }
    label{
        color:rgba(250,250,250,0.9);
    }
    .form-control {
        color: rgb(228, 222, 213);
        background-color: rgba(21, 22, 23,0.4);
        border-color: rgb(61, 66, 68);
    }
    .form-control:focus{
        background: rgba(21, 22, 23,0.5);
        color: rgb(228, 222, 213);
    }
    footer {
        position: relative;
        padding: 20px;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 65px;
        background-color: rgba(21, 22, 23,0.5);
    }

    /* 设置滚动条的宽度 */
    ::-webkit-scrollbar {
        width: 8px;
    }
    /* 设置滚动条的背景颜色 */
    ::-webkit-scrollbar-track {
        background: rgba(21, 22, 23,0.3)
    }

    /* 设置滚动条的颜色 */
    ::-webkit-scrollbar-thumb {
        background: #888;
    }

    /* 设置滚动条在鼠标悬停时的颜色 */
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    .modal-content{
        -webkit-backdrop-filter: blur(50px);
        backdrop-filter: blur(50px);
        background-color: rgba(21,22,23,0.5);
    }
    .modal-header{
        border-bottom: 0;
    }
    .modal-title{
        color: rgba(250,250,250,0.9);
    }
</style>